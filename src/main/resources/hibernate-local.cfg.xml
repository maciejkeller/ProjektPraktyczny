<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration SYSTEM
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <!--
            Poniżej mamy znajome z JDBC parametry połączenia do bazy danych
        -->
        <property name="hibernate.dialect">
            org.hibernate.dialect.MySQLDialect
        </property>

        <property name="hibernate.connection.driver_class">
            com.mysql.cj.jdbc.Driver
        </property>

        <property name="hibernate.connection.url">
            jdbc:mysql://localhost:3306/cinema_hibernate?&amp;useUnicode=true&amp;useJDBCCompliantTimezoneShift=true&amp;useLegacyDatetimeCode=false&amp;serverTimezone=UTC
        </property>

        <property name="hibernate.connection.username">
            root
        </property>

        <property name="hibernate.connection.password">
            Q1!2w@3e
        </property>

        <!--
            Właściwość, która pozwala logować zapytania, które zostały wykonane na bazie danych.
            To bardzo ważna opcja. Należy pamiętać żeby weryfikować czy zapytanie, które jest generowane
            odpowiada naszym potrzebom.
        -->
        <property name="show_sql">true</property>

        <property name="format_sql">true</property>

        <property name="connection.pool_size">1</property>

        <property name="current_session_context_class">thread</property>

        <!--
            Właściwości związane z connection pool, więcej na ten temat:
            https://www.baeldung.com/hibernate-c3p0
        -->
        <property name="hibernate.c3p0.min_size">1</property>
        <property name="hibernate.c3p0.max_size">20</property>
        <property name="hibernate.c3p0.timeout">300</property>
        <property name="hibernate.c3p0.max_statements">50</property>
        <property name="hibernate.c3p0.idle_test_period">3000</property>

        <mapping class="external.entity.City"/>
        <mapping class="external.entity.Country"/>
        <mapping class="external.entity.Region"/>
        <mapping class="external.entity.WeatherData"/>
    </session-factory>
</hibernate-configuration>